{
  "manifest_version": 3,
  "name": "Rostics Menu Assistant",
  "version": "1.0.0",
  "description": "View Rostics (KFC) menu with search and offline access",
  "author": "Claude Code Kit",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://rostics.ru/*",
    "https://www.rostics.ru/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://rostics.ru/menu*", "https://www.rostics.ru/menu*"],
      "js": ["parser.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
